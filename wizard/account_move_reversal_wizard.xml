<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- confirm -->
        <record id="account_move_resersal_confirm_view" model="ir.ui.view">
            <field name="name">Confirm Moves Reversals</field>
            <field name="model">account.move.reversal.confirm</field>
            <field name="arch" type="xml">
                <form string="Confirm Moves Reversals" version="7.0">
                    <separator string="Some moves was already reversed please select moves to reverse again:"/>
                    <group readonly="1">
                        <field name="to_confirm_id" nolabel="1" mode="tree" domain="[('id','in', context.get('reversed_move_ids', []))]">
                            <tree editable="bottom">
                                <field name="name" readonly="1"/>
                                <field name="ref" readonly="1"/>
                                <field name="date" readonly="1"/>
                                <field name="period_id" readonly="1"/>
                                <field name="journal_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="amount" readonly="1"/>
                                <field name="state" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Confirm" name="confirm_reversals" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/> 
                    </footer>
                </form>
            </field>
        </record>

        <!-- create -->
        <record id="account_move_resersal_create_view" model="ir.ui.view">
            <field name="name">Create Moves Reversals</field>
            <field name="model">account.move.reversal.create</field>
            <field name="arch" type="xml">
                <form string="Create Moves Reversals" version="7.0">
                    <separator string="Period for Reversals:"/>
                    <group>
                        <field name="period_choice"/>
                        <field name="period_offset" attrs="{'invisible': [('period_choice', '!=', 'offset')]}"/>
                        <field name="period_id" attrs="{'invisible': [('period_choice', '!=', 'specific')]}"/>
                    </group>
                    <separator string="Journal for Reversals:"/>
                    <group>
                        <field name="journal_choice"/>
                        <field name="journal_id" attrs="{'invisible': [('journal_choice', '!=', 'specific')]}"/>
                    </group>
                    <footer>
                        <button string="Create" name="create_reversals" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/> 
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_account_move_reversal_create" model="ir.actions.act_window">
            <field name="name">Create Moves Reversals</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.reversal.create</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_move_resersal_create_view"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record id="values_account_move_reversal" model="ir.values">
            <field name="name">Create Moves Reversals</field>
            <field name="model_id" ref="account.model_account_move" />
            <field name="model">account.move</field>
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_account_move_reversal_create'))" />
        </record>

    </data>
</openerp>
