<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="account_move_resersal_view" model="ir.ui.view">
            <field name="name">Creates Moves Reversals</field>
            <field name="model">account.move.reversal</field>
            <field name="arch" type="xml">
                <form string="Creates Moves Reversals" version="7.0">
                    <separator string="Choose a period or a period offset:"/>
                    <group>
                        <field name="current_period"/>
                        <field name="offset_period"/>
                        <field name="period_id"/>
                    </group>
                    <separator string="Choose a journal or use previous/default:"/>
                    <group>
                        <field name="default_journal"/>
                        <field name="previous_journal"/>
                        <field name="journal_id"/>
                    </group>
                    <footer>
                        <button string="Create" name="create_reversals" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/> 
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_account_move_reversal" model="ir.actions.act_window">
            <field name="name">Creates Moves Reversals</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.reversal</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_move_resersal_view"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record id="values_account_move_reversal" model="ir.values">
            <field name="name">Creates Moves Reversals</field>
            <field name="model_id" ref="account.model_account_move" />
            <field name="model">account.move</field>
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_account_move_reversal'))" />
        </record>

    </data>
</openerp>
